    <script>
    //読み込み処理      
      
      firebase.database().ref('/0113-6694/').on('value',function(snapshot) {
        document.getElementById("txtcolor").value = snapshot.child("iValue").val();
	      
	var strVibration =  snapshot.child("iVibration").val();
        var element = document.getElementById("Vibration") ;
        var elements = element.Vibrations ;
          if (strVibration=='1'){
            elements[0].checked = true ;
          }else{
            elements[1].checked = true ;
          }
	      
	var strHeater =  snapshot.child("iHeater").val();
        var elementHeater = document.getElementById("Heater") ;
        var elementHeaters = elementHeater.Heaters ;
          if (strHeater=='1'){
            elementHeaters[0].checked = true ;
          }else{
            elementHeaters[1].checked = true ;
          }
	      
        
	      
	      //iVibration
    });
    

      


    </script>
    
<section class="container">


    <script>
    //書き込み処理
            
      var db = firebase.database();
      
      var myChatAll = db.ref("/0113-6694/");
      function changeData(strColor){
        var txtcolor = document.getElementById("txtcolor").value;
        //var txtcolorname = document.getElementById("txtcolorname").value;
	if(strColor=="いかり"){
		txtcolor=1
	}else if(strColor=="きたい"){
		txtcolor=30
	}else if(strColor=="よろこび"){
		txtcolor=60
	}else if(strColor=="しんらい"){
		txtcolor=90
	}else if(strColor=="ふあん"){
		txtcolor=120
	}else if(strColor=="むしん"){
		txtcolor=160
	}else if(strColor=="かなしみ"){
		txtcolor=200
	}else if(strColor=="けんお"){
		txtcolor=260
	}

	var element = document.getElementById("Vibration") ;
	var elements = element.Vibrations ;
	var strVibration =  "";
        if (elements[0].checked == true){
          strVibration = '1' ;
        }else{
          strVibration = '0' ;
        }

	var elementHeater = document.getElementById("Heater") ;
	var elementHeaters = elementHeater.Heaters ;
	var strHeater =  "";
        if (elementHeaters[0].checked == true){
          strHeater = '1' ;
        }else{
          strHeater = '0' ;
        }
	      
	      
myChatAll.update({
    'iValue': txtcolor,
    'iVibration': strVibration,
    'iHeater': strHeater
	
});
	      
      }
      
    </script>
    
